@page "/genre/booklist/{GenreId:int}"
@using BookTracker.Shared.Models.Genre
@inject HttpClient http
@inject NavigationManager navigation
@attribute [Authorize]

<h3>Books</h3>

<a href="/book/create">Create a Book</a>

@if(books != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach(BookListItem book in books)
            {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a href=@($"book/{book.Id}")>Details</a>
                    <a href=@($"book/edit/{book.Id}")>Edit</a>
                    <a href=@($"book/delete/{book.Id}")>Delete</a>
                </td>
            </tr>    
            }
        </tbody>
    </table>
    
}
else
{
    <p><em>Loading...</em></p>

}

@code {

    [Parameter]

    public int GenreId { get; set; }

    private List<GenreBooksListItem> books;

    protected override async Task OnInitializedAsync()
    {
        books = await http.GetFromJsonAsync<List<GenreBooksListItem>>($"api/genre/booklist/{GenreId}");
    }
}